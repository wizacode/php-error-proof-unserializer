{
    "name": "wizacode/php-error-proof-unserializer",
    "description": "last chance php unserializer",
    "keywords": [
        "php",
        "unserialize",
        "error",
        "recover",
        "string length"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Wizaplace DevTeam ",
            "email": "dev@wizacha.com"
        }
    ],
    "require": {
        "php": "~7.4|~8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.6",
        "infection/infection": "^0.26.9",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Wizacode\\ErrorProofUnserializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "scan": [
            "phpcs --parallel=$(nproc)",
            "phpstan analyze"
        ],
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "infection": "XDEBUG_MODE=coverage infection -j$(nproc) -s",
        "fix": [
            "phpcbf"
        ],
        "check": [
            "@scan",
            "@test",
            "@infection"
        ]
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}